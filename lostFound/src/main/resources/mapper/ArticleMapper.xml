<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.wzy.mapper.ArticleMapper">
    <select id="findPages" resultType="com.wzy.entity.Article">
        select article.* from article
        left join article_file as af on article.id = af.article_id
        <where>
            <if test="is_deleted = '0'">
                article.is_deleted = '0'
            </if>
            <if test="description != null and description != ''">
                and af.description like concat('%',#{description},'%')
            </if>
        </where>
    </select>
    <select id="findPage" resultType="com.wzy.entity.Article">
        select article.* from article
        <where>
            <if test="name != null and name != ''">
                and name like concat('%',#{name},'%')
            </if>
        </where>
    </select>
</mapper>